{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "react/jsx-uses-react": "error", // ensure that the react import is used in jsx files
    "react/jsx-uses-vars": "error", // ensure that variables used in jsx are declared
    "react-hooks/rules-of-hooks": "error", // enforce rules of hooks
    "react-hooks/exhaustive-deps": "warn", // check effect dependencies
    "no-console": "warn", // prevent the use of console statements
    "no-debugger": "warn", // prevent the use of debugger statements
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }], // prevent unused variables
    "no-var": "error", // enforce using let/const instead of var
    "prefer-const": "error", // enforce using const instead of let when variable is not reassigned
    "semi": ["error", "always"], // enforce using semicolons
    "quotes": ["error", "single"], // enforce using single quotes
    "indent": ["error", 2], // enforce using 2 spaces for indentation
    "linebreak-style": ["error", "unix"], // enforce using unix line endings
    "eol-last": ["error", "always"], // enforce files ending with a newline character
    "no-trailing-spaces": "error" // enforce no trailing spaces
  }
}
